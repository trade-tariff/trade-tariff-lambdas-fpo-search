#!/usr/bin/env bash

[[ "$TRACE" ]] && set -o xtrace
set -o errexit
set -o nounset
set -o pipefail

MODEL_BUCKET_NAME=trade-tariff-models-382373577178
OLD_VERSION=$(git diff main search-config.toml | grep '\-version' | awk '{print $3}' | sed 's/"//g')
NEW_VERSION=$(git diff main search-config.toml | grep '+version' | awk '{print $3}' | sed 's/"//g')
LATEST_OLD_VERSION=$(.circleci/bin/getversions 1 "$OLD_VERSION")
LATEST_NEW_VERSION=$(.circleci/bin/getversions 1 "$NEW_VERSION")

function fetch_benchmarks() {
  mkdir -p old_benchmark
  mkdir -p new_benchmark

  aws s3 cp s3://"$MODEL_BUCKET_NAME"/"$LATEST_OLD_VERSION"/benchmark_results.zip old_benchmark/
  aws s3 cp s3://"$MODEL_BUCKET_NAME"/"$LATEST_NEW_VERSION"/benchmark_results.zip new_benchmark/

  unzip -o old_benchmark/benchmark_results.zip -d old_benchmark
  unzip -o new_benchmark/benchmark_results.zip -d new_benchmark

  echo "$LATEST_OLD_VERSION" > old_benchmark/version.txt
  echo "$LATEST_NEW_VERSION" > new_benchmark/version.txt
}

fetch_benchmarks
